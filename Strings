fun main() {
  var firstName = "John "
  var lastName = "Doe"
  println(firstName.plus(lastName))
}
==
John Doe
==

fun main() {
  var firstName = "John"
  var lastName = "Doe"
  println("My name is $firstName $lastName")
}
