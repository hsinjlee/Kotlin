fun main() {
  var txt = "Hello World"
  println(txt.toUpperCase())
  println(txt.toLowerCase())
}
==
HELLO WORLD
hello world
==

fun main() {
  var txt1 = "Hello World"
  var txt2 = "Hello World"
  println(txt1.compareTo(txt2))  // Outputs 0 (they are equal)
}
==
0
==

