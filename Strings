fun main() {
  var greeting = "Hello"
  println(greeting) 
}
==
Hello
==

fun main() {
  var greeting: String = "Hello"
  println(greeting) 
}
==
Hello
==

fun main() {
  var name: String
  name = "John"
  println(name)
}
==
John
==

